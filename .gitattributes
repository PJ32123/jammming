# Default text files to LF
* text=auto

# Explicitly enforce LF for source code and config
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf

# Allow CRLF for Windows batch files
*.bat  text eol=crlf
